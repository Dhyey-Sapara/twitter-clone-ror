<%= turbo_frame_tag tweet do %>

<div id="<%= dom_id tweet %>" class="mb-3 max-w-lg mx-auto p-5 bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-600 dark:border-gray-700">
    <p>
        <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"><%= tweet.heading %></h5>
    </p>
    <p class="mb-1 font-normal text-gray-700 dark:text-gray-200"><%= tweet.body %></p>
    <%= get_tweet_post(tweet) %>
    <p class="mb-3 font-normal text-end text-gray-700 dark:text-gray-200">- 
      <%= link_to tweet.user.username, user_profile_path(tweet.user), data: { turbo: false } %>
    </p>
    <%= action_btn(tweet) %>
</div>

<% end %>